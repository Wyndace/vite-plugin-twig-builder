{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "types": ["node", "vite", "twig"],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
